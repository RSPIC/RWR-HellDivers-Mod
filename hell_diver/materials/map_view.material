material MapViewBlockBase {
	receive_shadows off
	technique {
		pass {	
			fog_override true none
			lighting off
			//scene_blend alpha_blend
        		scene_blend alpha_blend
			depth_check off

			texture_unit Map {
				texture map.png
				//alpha_op_ex source1 src_manual src_manual 0.9 0.9
				colour_op_ex blend_diffuse_alpha src_diffuse src_texture
				filtering trilinear
			}

			texture_unit Overlay {
				texture none.png
				colour_op_ex blend_texture_alpha src_texture src_current 
				filtering trilinear
			}

			texture_unit Grid {
				texture mapview_grid.png
				// 21: scale 0.0476 0.0476
				// 18
				scale 0.0555 0.0555
				scroll 0.5 0.5
				// 15 scale 0.0666 0.0666
				// 10 scale 0.1 0.1
				colour_op modulate 
				alpha_op_ex source1 src_texture src_texture
				filtering trilinear
			}
		} 
	}
}

material MapViewFront {
	receive_shadows off
	technique {
		pass {	
			fog_override true none
			lighting off
			scene_blend alpha_blend
			depth_check off

			texture_unit Decal {
				texture mapview_frame_base.png
				filtering trilinear
			}
		} 
		pass {	
			fog_override true none
			lighting off
			scene_blend alpha_blend
			depth_check off

			texture_unit Decal {
				texture mapview_frame_add_triangle.png
				scroll_anim 0 0.05
				tex_address_mode wrap
				filtering trilinear
			}
			texture_unit Decal {
				texture mapview_frame_add_triangle_mask.png
				colour_op_ex source2 src_texture src_current
				alpha_op_ex modulate src_texture src_current
				filtering trilinear
			}
		} 
		pass {	
			fog_override true none
			lighting off
			scene_blend alpha_blend
			depth_check off

			texture_unit Decal {
				anim_texture mapview_frame_add_code.png 4 40
				scale 1 1
				tex_address_mode wrap
				//wave_xform scroll_y sine 0 0.01 0 0.2
				filtering trilinear
			}
			texture_unit Decal {
				texture mapview_frame_add_code_mask.png
				colour_op_ex source2 src_texture src_current
				alpha_op_ex modulate src_texture src_current
				filtering trilinear
			}
		} 
		pass {	
			fog_override true none
			lighting off
			scene_blend alpha_blend
			depth_check off

			texture_unit Decal {
				anim_texture mapview_frame_add_news.png 2 600
				scale 1 1
				scroll_anim 0 -0.005
				tex_address_mode wrap
				filtering trilinear
			}
			texture_unit Decal {
				texture mapview_frame_add_news_mask.png
				colour_op_ex source2 src_texture src_current
				alpha_op_ex modulate src_texture src_current
				filtering trilinear
			}
		} 
		pass {	
			fog_override true none
			lighting off
			scene_blend add
			depth_check off

			texture_unit Decal {
				texture mapview_frame_add_sacn.png
				scroll_anim 0 0.08
				tex_address_mode wrap
				filtering trilinear
			}
			texture_unit Decal {
				texture mapview_frame_add_sacn_mask.png
				alpha_op_ex modulate src_texture src_current
				filtering trilinear
			}
		} 
	}
}


material MapViewAlert
{
	receive_shadows off	
	technique
	{
		pass
		{
			scene_blend alpha_blend
			lighting off
			fog_override true none
			texture_unit {	
				texture mapview_alert.png		
	     			tex_address_mode clamp	
			        wave_xform scale_x sine 0.4 0.8 0.0 0.5
        			wave_xform scale_y sine 0.4 0.8 0.0 0.5
		 	}
		}
	}
}

