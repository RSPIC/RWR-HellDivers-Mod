    sustained_fire_diminish_rate="3" 
    magazine_size="9" 
    can_shoot_standing="1" 
    can_shoot_crouching="1" 
	can_shoot_prone="1"	
    suppressed="0" 
	class="4" 
    name="LHO-63 Camper" 
	burst_shots="1" 
    projectiles_per_shot="10" 
