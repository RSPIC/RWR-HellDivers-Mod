	{
		time0 0
		colour0 0 0.8 0 0.6
		time1 0.7
		colour1 0 0.8 0 0.5
		time2 1
		colour2 0 0 0 0
	}
	affector LinearForce{
		force_vector 0 -4 0
		force_application add
	}
	affector DirectionRandomiser 
	{
		randomness 0
		scope 0
		keep_velocity false
	}
}
