	extent="3.84 0 4.16" 
	offset="0 0.0 0" 
	top_offset="0 1.2 0" 
	drag_offset="-1" 
	friction_offset="0.5"
	collision_model_pos="0 0.86 0.0" 
	collision_model_extent="2.64 1.928 3.84" 
