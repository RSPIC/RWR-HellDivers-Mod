map_view_atlas_index="29" 
minimum_fill_requirement="1.0" 

existence="one_per_faction" 
reserves_spawn_point="1" 
ai_driver_turns_to_target="1"
allow_ai_to_use="0"
>
	<tag name="metal_heavy" />
   	<tag name="apc" />

	<tire_set offset="1 0.0 +1.4" radius="0.45" />
	<tire_set offset="1 0.0 -0.6" radius="0.45" />
	<tire_set offset="1 0.0 -1.12" radius="0.45" />

	<control 
	max_speed="22.0" 
	acceleration="30.0" 
	max_reverse_speed="20.0" 
	min_health_to_steer="0.6" 
	max_rotation="0.6" 
	max_water_depth="1.08" 
	steer_smoothening="0.2" 
	tracked="0" 
	gears="1" 
	max_limiter_speed="10.0"/>

